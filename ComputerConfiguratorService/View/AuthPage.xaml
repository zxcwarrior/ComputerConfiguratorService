<Page x:Class="ComputerConfiguratorService.View.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerConfiguratorService.View"
      mc:Ignorable="d" 
      Title="AuthPage">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">

        <Border Background="{StaticResource WindowBackgroundBrush}" BorderBrush="White" BorderThickness="1" Padding="20" CornerRadius="25">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">

                <TextBlock HorizontalAlignment="Center" FontSize="28" FontWeight="Bold" Foreground="White" Text="Авторизация" Margin="0,0,0,20"/>

                <TextBlock FontSize="16" FontWeight="Bold" Foreground="White" Text="Логин" />
                <TextBox x:Name="UsernameTextBox"/>

                <TextBlock FontSize="16" FontWeight="Bold" Foreground="White" Text="Пароль" />
                <PasswordBox x:Name="PasswordBox" Style="{StaticResource PasswordFieldStyle}" />

                <Button x:Name="LogInBtn" Content="Войти" Style="{StaticResource ButtonStyle}" Cursor="Hand" Click="LogInBtn_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
