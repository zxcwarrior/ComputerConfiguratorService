<Page x:Class="ComputerConfiguratorService.View.BackDataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerConfiguratorService.View"
      mc:Ignorable="d" 
      Title="BackDataPage">

    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <TextBlock Text="Справочные данные" 
                       HorizontalAlignment="Center" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Margin="0,0,0,30"/>
            <Button Content="Производители" 
                    Click="ManufacturersButton_Click" 
                    Width="220" 
                    Height="50" 
                    Margin="0,10" 
                    FontSize="16" 
                    FontWeight="Bold"/>
            <Button Content="Сокеты" 
                    Click="SocketsButton_Click" 
                    Width="220" 
                    Height="50" 
                    Margin="0,10" 
                    FontSize="16" 
                    FontWeight="Bold"/>
            <Button Content="Типы RAM" 
                    Click="RAMTypesButton_Click" 
                    Width="220" 
                    Height="50" 
                    Margin="0,10" 
                    FontSize="16" 
                    FontWeight="Bold"/>
            <Button Content="Типы накопителей" 
                    Click="StorageTypesButton_Click" 
                    Width="220" 
                    Height="50" 
                    Margin="0,10" 
                    FontSize="16" 
                    FontWeight="Bold"/>
            <Button Content="Типы охлаждения" 
                    Click="CoolingTypesButton_Click" 
                    Width="220" 
                    Height="50" 
                    Margin="0,10" 
                    FontSize="16" 
                    FontWeight="Bold"/>
            <Button Content="Форм-факторы корпусов" 
                    Click="CaseFormFactorsButton_Click" 
                    Width="220" 
                    Height="50" 
                    Margin="0,10" 
                    FontSize="16" 
                    FontWeight="Bold"/>
            <Button Content="Форм-факторы мат.плат" 
                    Click="MotherboardFormFactorsButton_Click" 
                    Width="220" 
                    Height="50" 
                    Margin="0,10" 
                    FontSize="16" 
                    FontWeight="Bold"/>
            <Button Content="Рейтинги эффективности" 
                    Click="EfficiencyRatingsButton_Click" 
                    Width="220" 
                    Height="50" 
                    Margin="0,10" 
                    FontSize="16" 
                    FontWeight="Bold"/>
            <Button Content="Вендоры" 
                    Click="VendorsButton_Click" 
                    Width="220" 
                    Height="50" 
                    Margin="0,10" 
                    FontSize="16" 
                    FontWeight="Bold"/>
            <Button Content="Типы памяти GPU" 
                    Click="GPUMemoryTypesButton_Click" 
                    Width="220" 
                    Height="50" 
                    Margin="0,10" 
                    FontSize="16" 
                    FontWeight="Bold" 
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Page>
