<Page x:Class="ComputerConfiguratorService.View.CPUsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="CPUsPage">
    <Grid Background="{StaticResource WindowBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Редактировать" Style="{StaticResource ButtonStyle}" Width="150" Height="40" Click="EditButton_Click" Margin="5"/>
            <Button Content="Удалить" Style="{StaticResource ButtonStyle}" Width="150" Height="40" Click="DeleteButton_Click" Margin="5"/>
        </StackPanel>

        <ListView x:Name="LVCPUs" Grid.Row="1" Background="{x:Null}" SelectionMode="Single">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="#444444" BorderBrush="#555555" BorderThickness="2" CornerRadius="8" Margin="10" Padding="10">
                        <StackPanel Width="200">
                            <Image Source="{Binding ImagePath}" Height="150" Stretch="Uniform" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding Manufacturers.ManufacturerName, StringFormat='Производитель: {0}'}" FontSize="14" Foreground="White" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding Model, StringFormat='Модель: {0}'}" FontSize="14" Foreground="White" TextWrapping="Wrap" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding Cores, StringFormat='Ядер: {0}'}" FontSize="14" Foreground="White" Margin="0,0,0,2"/>
                            <TextBlock Text="{Binding Threads, StringFormat='Потоков: {0}'}" FontSize="14" Foreground="White" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding BaseClock, StringFormat='Базовая частота: {0} GHz'}" FontSize="14" Foreground="White" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding BoostClock, StringFormat='Boost частота: {0} GHz'}" FontSize="14" Foreground="White" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding TDP, StringFormat='TDP: {0}W'}" FontSize="14" Foreground="White" Margin="0,0,0,5"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Border x:Name="EditPanel" Grid.Row="2" Background="#333333" Padding="10" Visibility="Collapsed" Margin="10">
            <StackPanel>
                
                <TextBlock Text="Редактирование/Добавление процессора" Foreground="White" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Производитель:" Foreground="White" Width="120"/>
                    <ComboBox x:Name="cbManufacturer" Width="200" DisplayMemberPath="ManufacturerName" SelectedValuePath="ManufacturerID"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Сокет:" Foreground="White" Width="120"/>
                    <ComboBox x:Name="cbSocket" Width="200" DisplayMemberPath="SocketName" SelectedValuePath="SocketID"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Модель:" Foreground="White" Width="120"/>
                    <TextBox x:Name="tbModel" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Ядер:" Foreground="White" Width="120"/>
                    <TextBox x:Name="tbCores" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Потоков:" Foreground="White" Width="120"/>
                    <TextBox x:Name="tbThreads" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Базовая частота:" Foreground="White" Width="120"/>
                    <TextBox x:Name="tbBaseClock" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Boost частота:" Foreground="White" Width="120"/>
                    <TextBox x:Name="tbBoostClock" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="TDP:" Foreground="White" Width="120"/>
                    <TextBox x:Name="tbTDP" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Цена:" Foreground="White" Width="120"/>
                    <TextBox x:Name="tbPrice" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text=":" Foreground="White" Width="120"/>
                    <TextBox x:Name="tbImagePath" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Сохранить" Style="{StaticResource ButtonStyle}" Width="150" Height="40" Click="SaveButton_Click" Margin="5"/>
                    <Button Content="Отмена" Style="{StaticResource ButtonStyle}" Width="150" Height="40" Click="CancelButton_Click" Margin="5"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
