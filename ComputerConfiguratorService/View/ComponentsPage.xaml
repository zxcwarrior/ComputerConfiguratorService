<Page x:Class="ComputerConfiguratorService.View.ComponentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerConfiguratorService.View"
      mc:Ignorable="d" 
      Title="ComponentsPage">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <TextBlock Text="Комплектующие" 
                       HorizontalAlignment="Center" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Margin="0,0,0,30"/>
            <Button Content="Процессоры" 
                    Click="CPUsButton_Click" 
                    Width="220" 
                    Height="50" 
                    Margin="0,10" 
                    FontSize="16" 
                    FontWeight="Bold"/>
            <Button Content="Видеокарты" 
                    Click="GPUsButton_Click" 
                    Width="220" 
                    Height="50" 
                    Margin="0,10" 
                    FontSize="16" 
                    FontWeight="Bold"/>
            <Button Content="Оперативная память" 
                    Click="RAMsButton_Click" 
                    Width="220" 
                    Height="50" 
                    Margin="0,10" 
                    FontSize="16" 
                    FontWeight="Bold"/>
            <Button Content="Накопители" 
                    Click="StoragesButton_Click" 
                    Width="220" 
                    Height="50" 
                    Margin="0,10" 
                    FontSize="16" 
                    FontWeight="Bold"/>
            <Button Content="Блоки питания" 
                    Click="PowerSuppliesButton_Click" 
                    Width="220" 
                    Height="50" 
                    Margin="0,10" 
                    FontSize="16" 
                    FontWeight="Bold"/>
            <Button Content="Материнские платы" 
                    Click="MotherboardsButton_Click" 
                    Width="220" 
                    Height="50" 
                    Margin="0,10" 
                    FontSize="16" 
                    FontWeight="Bold"/>
            <Button Content="Охлаждение процессора" 
                    Click="CPUCoolingButton_Click" 
                    Width="220" 
                    Height="50" 
                    Margin="0,10" 
                    FontSize="16" 
                    FontWeight="Bold"/>
            <Button Content="Корпуса" 
                    Click="CasesButton_Click" 
                    Width="220" 
                    Height="50" 
                    Margin="0,10" 
                    FontSize="16" 
                    FontWeight="Bold"/>
            <Button Content="Охлаждение корпуса" 
                    Click="CaseCoolingButton_Click" 
                    Width="220" 
                    Height="50" 
                    Margin="0,10" 
                    FontSize="16" 
                    FontWeight="Bold" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Page>