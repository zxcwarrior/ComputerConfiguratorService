<Page x:Class="ComputerConfiguratorService.View.RAMsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerConfiguratorService.View"
      mc:Ignorable="d" 
      Title="RAMsPage">

    <Grid Background="{StaticResource WindowBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Редактировать" Style="{StaticResource ButtonStyle}" Width="150" Height="40" Click="EditButton_Click" Margin="5"/>
            <Button Content="Удалить" Style="{StaticResource ButtonStyle}" Width="150" Height="40" Click="DeleteButton_Click" Margin="5"/>
        </StackPanel>

        <ListView x:Name="LVRAMs" Grid.Row="1" Background="{x:Null}" SelectionMode="Single">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="#444444" BorderBrush="#555555" BorderThickness="2" CornerRadius="8" Margin="10" Padding="10">
                        <StackPanel Width="200">
                            <Image Source="{Binding ImagePath}" Height="150" Stretch="Uniform" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding Manufacturers.ManufacturerName, StringFormat='Производитель: {0}'}" Foreground="White" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding Model, StringFormat='Модель: {0}'}" Foreground="White" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding CapacityGB, StringFormat='Объем: {0}GB'}" Foreground="White" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding SpeedMHz, StringFormat='Скорость: {0}MHz'}" Foreground="White" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding Price, StringFormat='Цена: {0}'}" Foreground="White" Margin="0,0,0,5"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Border x:Name="EditPanel" Grid.Row="2" Background="#333333" Padding="10" Visibility="Collapsed" Margin="10">
            <StackPanel>
                <TextBlock Text="Редактирование/Добавление RAM" Foreground="White" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Производитель:" Foreground="White" Width="120"/>
                    <ComboBox x:Name="cbManufacturer" Width="200" DisplayMemberPath="ManufacturerName" SelectedValuePath="ManufacturerID"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Тип RAM:" Foreground="White" Width="120"/>
                    <ComboBox x:Name="cbRAMType" Width="200" DisplayMemberPath="RAMType" SelectedValuePath="RAMTypeID"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Модель:" Foreground="White" Width="120"/>
                    <TextBox x:Name="tbModel" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Объем (GB):" Foreground="White" Width="120"/>
                    <TextBox x:Name="tbCapacity" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Скорость (MHz):" Foreground="White" Width="120"/>
                    <TextBox x:Name="tbSpeed" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Цена:" Foreground="White" Width="120"/>
                    <TextBox x:Name="tbPrice" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="ImagePath:" Foreground="White" Width="120"/>
                    <TextBox x:Name="tbImagePath" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
                    <Button Content="Сохранить" Style="{StaticResource ButtonStyle}" Width="150" Height="40" Click="SaveButton_Click" Margin="5"/>
                    <Button Content="Отмена" Style="{StaticResource ButtonStyle}" Width="150" Height="40" Click="CancelButton_Click" Margin="5"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
